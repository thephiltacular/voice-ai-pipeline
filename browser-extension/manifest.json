{
  "manifest_version": 3,
  "name": "Voice Copilot Integration",
  "version": "1.0.0",
  "description": "Add voice input capability to GitHub Copilot Chat",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://copilot.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://copilot.github.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Voice Copilot",
    "default_icon": {
      "16": "icons/mic-16.png",
      "32": "icons/mic-32.png",
      "48": "icons/mic-48.png",
      "128": "icons/mic-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/mic-16.png",
    "32": "icons/mic-32.png",
    "48": "icons/mic-48.png",
    "128": "icons/mic-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.html"],
      "matches": ["https://github.com/*", "https://copilot.github.com/*"]
    }
  ]
}